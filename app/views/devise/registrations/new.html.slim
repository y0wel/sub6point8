div.flex.min-h-screen.items-center.fixed.top-10.bg-gray-5
  div.w-full.max-w-md.bg-white.px-6.py-8.shadow-md.rounded-lg
    h2.text-center.text-2xl.font-bold.text-gray-900 Sign up

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f|
      = render "devise/shared/error_messages", resource: resource

      label.block.text-sm.font-medium.text-gray-900 for="email"
        | Email address
      .mt-2 
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 border border-gray-300 focus:outline focus:ring-2 focus:ring-indigo-600"


      label.block.text-sm.font-medium.text-gray-900 for="user_name"
        | Username
      .mt-2
        = f.text_field :user_name, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 border border-gray-300 focus:outline focus:ring-2 focus:ring-indigo-600"

      label.block.text-sm.font-medium.text-gray-900 for="password"
        | Password
      .mt-2
        = f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 border border-gray-300 focus:outline focus:ring-2 focus:ring-indigo-600"

      label.block.text-sm.font-medium.text-gray-900 for="password_confirmation"
        | Password Confirmation
      .mt-2
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 border border-gray-300 focus:outline focus:ring-2 focus:ring-indigo-600"

      .row
        = f.submit "Sign up", class: "w-full flex justify-center rounded-md bg-indigo-600 px-4 py-2 text-white font-semibold text-sm hover:bg-indigo-500 focus:outline focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"

      div.relative
        div.absolute.inset-0.flex.items-center aria-hidden="true"
          div.w-full.border-t.border-gray-200
        div.relative.flex.justify-center.text-sm-6.font-medium
          span.bg-white.px-6.text-gray-900 Or

      = render "devise/shared/links"
